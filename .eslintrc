{
  "extends": ["plugin:react/recommended", "plugin:flowtype/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "flowtype"],
  "env": {
    "es6": true,
    "browser": true,
    "jest": true
  },
  "rules": {
    "comma-dangle": ["warn", "always-multiline"],
    "no-debugger": "warn",
    "no-unused-vars": "warn",
    "react/no-did-mount-set-state": "warn",
    "react/no-did-update-set-state": "warn",
    "space-before-function-paren": ["warn", "never"]
  }
}
